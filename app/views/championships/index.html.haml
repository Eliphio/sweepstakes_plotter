%h2
  Listing Championships

%table
  %thead
    %tr
      %th
        Name
      %th
        Started_on
      %th
        Ended_on
  %tbody
    - collection.each do |resource|
      %tr
        %td
          = resource
        %td
          = l resource.started_on
        %td
          = l resource.ended_on
        %td
          = link_to :edit, edit_resource_path(resource)
        %td
          = link_to :show, resource
        %td
          = link_to :destroy, resource, :method => :delete, :confirm => "Are sure?"

= link_to :new, new_resource_path